    private List<TeaParty> toEmployees(List<String> lines) {
        List<TeaParty> information = new ArrayList<>();
        lines.remove(0);
        for (String line : lines) {
            information.add(toEmployees(line));
        }
        return information;
    }

    private List<String> getLines() {
        return reader.asLines("ReflectionWeek7/employees.csv");
